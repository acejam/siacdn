#!/usr/bin/env bash

set -e

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
source $DIR/base

PODNAME=$($KUBE get pods -l app=siacdn-backend -o jsonpath="{.items[0].metadata.name}")

$KUBE exec -it $PODNAME -- sh -c 'cp /siacdn/data/database.json /siacdn/data/database-$(date +"%Y-%m-%d_%H-%M-%S").json && ls -lhtra /siacdn/data/'
